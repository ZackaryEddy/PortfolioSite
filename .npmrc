# NPM configuration for Sevalla deployment
# Disables package-lock entirely to prevent idealTree errors
package-lock=false
# Aggressive cache settings to prevent conflicts
cache=/tmp/npm-cache-${RANDOM}
# Disable all non-essential features
progress=false
loglevel=silent
fund=false
audit=false
update-notifier=false
# Peer dependency settings
strict-peer-dependencies=false
engine-strict=false
legacy-peer-deps=true
